{
    "compilerOptions": {
        "strict": true,
        "allowJs": true,
        "jsx": "preserve",
        "target": "es2021",
        "outDir": "./dist",
        "rootDir": "./src/",
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
    ],
    "exclude": [
        "**/*.test.ts",
        "node_modules",
        "src/frontend.ts",
        "src/test-setup.ts",
    ]
}