{
    "compilerOptions": {
        "target": "es2024",
        "module": "commonjs",
        "lib": [
            "ES2024"
        ],
        "baseUrl": ".",
        "outDir": "./dist",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "./src/**/*",
        "../src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    },
}