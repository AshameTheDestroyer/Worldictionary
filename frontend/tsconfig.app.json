{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ES2023",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "ES2023",
            "DOM.Iterable"
        ],
        "noEmit": true,
        "strict": true,
        "jsx": "react-jsx",
        "rootDir": "./src",
        "module": "ESNext",
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "isolatedModules": true,
        "noUnusedParameters": true,
        "moduleDetection": "force",
        "moduleResolution": "bundler",
        "noFallthroughCasesInSwitch": true,
        "allowImportingTsExtensions": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}